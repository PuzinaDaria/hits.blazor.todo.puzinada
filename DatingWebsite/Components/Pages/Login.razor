@page "/login"

<div style="max-width: 500px; margin: 80px auto;">
    <div style="background: white; border-radius: 12px; box-shadow: 0 5px 20px rgba(0,0,0,0.1); overflow: hidden;">
        <div style="background: #e75480; color: white; padding: 25px 30px;">
            <h2 style="margin: 0; font-size: 28px;">Вход в систему</h2>
        </div>

        <div style="padding: 30px;">
            <!-- Сообщения об ошибках и успехе -->
            <div id="errorMessage" style="display: none; background: #dc3545; color: white; padding: 15px; border-radius: 8px; margin-bottom: 20px; text-align: center;">
            </div>

            <div id="successMessage" style="display: none; background: #28a745; color: white; padding: 15px; border-radius: 8px; margin-bottom: 20px; text-align: center;">
            </div>

            <!-- Поле для email -->
            <div style="margin-bottom: 20px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Email</label>
                <input type="email" id="emailInput" placeholder="Введите ваш email"
                       style="width: 100%; padding: 12px; border: 2px solid #ddd; border-radius: 8px; font-size: 16px;">
                <div id="emailError" style="color: #dc3545; font-size: 14px; margin-top: 5px; display: none;"></div>
            </div>

            <!-- Поле для пароля -->
            <div style="margin-bottom: 30px;">
                <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #333;">Пароль</label>
                <input type="password" id="passwordInput" placeholder="Введите ваш пароль"
                       style="width: 100%; padding: 12px; border: 2px solid #ddd; border-radius: 8px; font-size: 16px;">
                <div id="passwordError" style="color: #dc3545; font-size: 14px; margin-top: 5px; display: none;"></div>
            </div>

            <!-- Кнопка входа -->
            <button id="loginButton" onclick="handleLogin()"
                    style="width: 100%; background: #e75480; color: white; border: none; padding: 15px; border-radius: 8px; font-size: 18px; cursor: pointer; display: flex; align-items: center; justify-content: center;">
                <span style="margin-right: 10px;">🔐</span>
                Войти
            </button>

            <!-- Ссылка на регистрацию -->
            <div style="text-align: center; margin-top: 20px;">
                <a href="/register" style="color: #e75480; text-decoration: none;">
                    Нет аккаунта? Зарегистрироваться
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Подключаем JavaScript файл -->
<script src="js/login.js"></script>