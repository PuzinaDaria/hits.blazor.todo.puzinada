    function changeAvatar() {
        console.log('Смена аватарки');

        // Заполняем поля текущими данными
        const avatarUrlInput = document.getElementById('avatarUrl');
        const avatarPreview = document.getElementById('avatarPreview');

        if (currentUser && currentUser.avatar) {
            avatarUrlInput.value = currentUser.avatar;

            // Показываем текущую аватарку в превью
            avatarPreview.innerHTML = `
                <img src="${currentUser.avatar}" alt="Аватарка"
                     style="width: 100%; height: 100%; object-fit: cover;" />
            `;
        } else {
            avatarUrlInput.value = '';
            avatarPreview.innerHTML = '<div style="color: #666; font-size: 14px;">Предпросмотр</div>';
        }

        // Настройка загрузки файла
        const fileInput = document.getElementById('avatarInput');
        fileInput.onchange = function(event) {
            const file = event.target.files[0];
            if (file) {
                // Проверяем размер файла (макс 2 МБ)
                if (file.size > 2 * 1024 * 1024) {
                    alert('Файл слишком большой. Максимальный размер: 2 МБ');
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    avatarPreview.innerHTML = `
                        <img src="${e.target.result}" alt="Загруженное изображение"
                             style="width: 100%; height: 100%; object-fit: cover;" />
                    `;
                    avatarUrlInput.value = e.target.result; // Data URL
                };
                reader.readAsDataURL(file);
            }
        };

        // Очищаем поле файла
        fileInput.value = '';

        // Показываем модальное окно
        document.getElementById('avatarModal').style.display = 'flex';
    }

    function saveAvatar() {
        const avatarUrl = document.getElementById('avatarUrl').value.trim();

        if (!avatarUrl) {
            alert('Введите URL изображения или загрузите файл');
            return;
        }

        // Проверяем, что это валидный URL или Data URL
        if (!avatarUrl.startsWith('http') && !avatarUrl.startsWith('data:image')) {
            alert('Пожалуйста, введите корректный URL изображения (начинается с http://, https:// или data:image)');
            return;
        }

        // Обновляем данные пользователя
        currentUser.avatar = avatarUrl;

        // Сохраняем в localStorage
        localStorage.setItem('currentUser', JSON.stringify(currentUser));

        // Обновляем в общем списке пользователей
        const users = JSON.parse(localStorage.getItem('datingWebsiteUsers') || '[]');
        const userIndex = users.findIndex(u => u.email === currentUser.email);
        if (userIndex !== -1) {
            users[userIndex].avatar = avatarUrl;
            localStorage.setItem('datingWebsiteUsers', JSON.stringify(users));
        }

        // Закрываем модальное окно
        document.getElementById('avatarModal').style.display = 'none';

        // Обновляем профиль
        loadUserProfile();

        alert('Аватарка успешно обновлена!');
    }

    function removeAvatar() {
        if (!confirm('Удалить аватарку?')) {
            return;
        }

        // Удаляем аватарку у пользователя
        currentUser.avatar = '';

        // Сохраняем изменения
        localStorage.setItem('currentUser', JSON.stringify(currentUser));

        // Обновляем в общем списке
        const users = JSON.parse(localStorage.getItem('datingWebsiteUsers') || '[]');
        const userIndex = users.findIndex(u => u.email === currentUser.email);
        if (userIndex !== -1) {
            users[userIndex].avatar = '';
            localStorage.setItem('datingWebsiteUsers', JSON.stringify(users));
        }

        // Закрываем модальное окно
        document.getElementById('avatarModal').style.display = 'none';

        // Обновляем профиль
        loadUserProfile();

        alert('Аватарка удалена');
    }

    function deleteProfile() {
        if (confirm('Вы уверены, что хотите удалить свой профиль? Это действие нельзя отменить.')) {
            try {
                // Получаем текущего пользователя
                const userJson = localStorage.getItem('currentUser');
                if (!userJson) return;

                const user = JSON.parse(userJson);

                // Удаляем пользователя из списка пользователей
                const users = JSON.parse(localStorage.getItem('datingWebsiteUsers') || '[]');
                const updatedUsers = users.filter(u => u.email !== user.email);
                localStorage.setItem('datingWebsiteUsers', JSON.stringify(updatedUsers));

                // Удаляем текущего пользователя
                localStorage.removeItem('currentUser');
                localStorage.removeItem('isLoggedIn');

                // Обновляем меню
                if (typeof updateMenu !== 'undefined') {
                    updateMenu();
                }

                alert('Профиль успешно удален');
                window.location.href = '/';

            } catch (error) {
                console.error('Ошибка при удалении профиля:', error);
                alert('Ошибка при удалении профиля');
            }
        }
    }
